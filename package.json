{
  "name": "airplanes-api",
  "type": "module",
  "scripts": {
    "dev": "bun run --hot src/index.ts",
    "build": "bun install && bun db:migrate:deploy && bun db:gen",
    "start": "bun db:migrate:deploy && bun db:gen && bun run src/index.ts",
    "typecheck": "tsc --noEmit",
    "docker:up": "docker compose up -d",
    "docker:up:prod": "docker compose -f docker-compose.prod.yaml up -d",
    "db:migrate": "prisma migrate dev",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:gen": "prisma generate --no-hints",
    "db:seed": "prisma db seed",
    "db:studio": "prisma studio"
  },
  "prisma": {
    "seed": "bun prisma/seed.ts"
  },
  "dependencies": {
    "@hono/zod-openapi": "^0.18.4",
    "@prisma/client": "^6.3.1",
    "@scalar/hono-api-reference": "^0.5.171",
    "hono": "^4.6.20",
    "prisma-erd-generator": "^2.0.4",
    "slugify": "^1.6.6",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "prisma": "^6.3.1",
    "typescript": "^5.7.3",
    "zod-prisma-types": "^3.2.4"
  }
}
